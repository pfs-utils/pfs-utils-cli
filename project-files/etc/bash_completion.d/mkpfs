_mkpfs_command(){ 
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}" 
	if [[ ${cur} == -* ]] ; then 
        LIST="$(_parse_help mkpfs)"
	elif [[ ${cur} == [[:alnum:]]* ]] ; then 
        LIST="$(ls -1 ./)"
	else  
		LIST="$(ls -1d ${cur}* 2>/dev/null)"
    fi
	COMPREPLY=( $(compgen -W "$LIST" -- ${cur}) )
}
complete -F _mkpfs_command mkpfs
